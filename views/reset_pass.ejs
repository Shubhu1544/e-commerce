  <script>
    $(document).ready(function () {
      $('#show-email').hide();
      

      var email_err = true;
      

      

      $('#email').keyup(function () {
        email_error();
      });
      function email_error() {
        var email_val = $('#email').val();

        if (email_val.length == "") {
          $('#show-email').show();
          $('#show-email').html("**plzz fill your email id**");
          $('#show-email').css('color', 'red');
          $('#show-email').focus();
          email_err = false;
          return false;
        }
        else {
          $('#show-email').hide();
          return true;
        }
      }


      $('#submit_btn').click(function () {
        email_err = true;
        

        email_error();
        

        if (email_error() == true ) {
          // console.log( true)
          return true;
        }
        else {
          // console.log( false)
          return false;
        }
      });

    });

